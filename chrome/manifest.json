{
  "manifest_version": 2,

  "name": "Certificate Info",
  "description": "Shows TLS certificate validation level of the pages you visit.",
  "version": "0.0.1",

  "browser_action": {
    "default_icon": "icon.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },

  "permissions": [
    "tabs",
    "https://*.blupig.net/"
  ]
}
