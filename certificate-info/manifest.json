{
  "manifest_version": 2,
  "name": "Certificate Info",
  "description": "Shows TLS certificate info and validation level of the servers you connect.",
  "version": "0.1.1",

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "ic_lock.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "https://*.blupig.net/"
  ]
}
