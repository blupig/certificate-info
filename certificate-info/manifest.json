{
  "manifest_version": 2,
  "name": "Certificate Info",
  "description": "Shows TLS certificate validation level of the pages you visit.",
  "version": "0.0.1",

  "icons": {
    "16": "icon_16.png",
    "48": "icon_48.png",
    "128": "icon_128.png"
  },
  "browser_action": {
    "default_icon": "ic_lock.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "permissions": [
    "tabs",
    "https://*.blupig.net/"
  ]
}
